@using IDBeAcademy.ModelViews
@model LoginUser

@{
    Layout = "_Layout";
}

<h1 class="text-center title-page">LogIn</h1>
<div class="login-form">
    <form id="customer-form" asp-action="LogIn" method="post">
        @Html.AntiForgeryToken() 
        <div>
            <div asp-validation-summary="All"></div>
            <div class="form-group no-gutters">
                <input asp-for="UserEmail" class="form-control" type="email" placeholder="Email" />
                <span asp-validation-for="UserEmail"></span>
            </div>
            <div class="form-group no-gutters">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group no-gutters">
                <div class="input-group js-parent-focus">
                    <label for="RememberMe">Remember Me?</label>
                    <input asp-for="RememberMe" type="checkbox" />
                </div>
            </div>
            <div class="text-center">
                <div class="forgot-password">
                    <a rel="nofollow" asp-action="Register">New?</a>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="text-center no-gutters">
                <button class="btn btn-primary" data-link-action="sign-in" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
</div>
